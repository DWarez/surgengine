{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LinearLayer Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/tests/linear_layer_test",
            "args": ["--gtest_filter=LinearLayerTest.CUDAForward"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}